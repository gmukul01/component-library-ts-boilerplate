{
    "compilerOptions": {
        "allowJs": true,
        "lib": ["es2015", "dom"],
        "esModuleInterop": true,
        "isolatedModules": true,
        "jsx": "react",
        "moduleResolution": "node",
        "noEmit": true,
        "strict": true,
        "skipLibCheck": true,
        "strictNullChecks": false,
        "strictFunctionTypes": false,
        "target": "esnext",
        "rootDir": "./",
        "baseUrl": "./",
        "paths": {
            "*": ["node_modules", "packages"]
        }
    },
    "include": ["packages"],
    "exclude": ["node_modules"]
}
